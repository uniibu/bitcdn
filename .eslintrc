{
  "root":true,
  "env": {
      "commonjs": true,
      "node": true,
      "es6": true,
      "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style":["error","unix"],
    "no-console":"off",
    "quotes": ["error","single"],
    "semi":["error","always"]  
  }
}